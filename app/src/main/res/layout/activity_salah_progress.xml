<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"

    android:background="@drawable/back1"
    tools:context=".SalahProgress">
    <TextView
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Track your Salah!"
        android:textSize="25dp"
        android:layout_weight="0.2"
        >

    </TextView>

    <LinearLayout
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_weight="2.5">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rakah1"
            android:id="@+id/rakah1"
            android:textSize="15dp"
            android:visibility="gone">

        </TextView>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="0dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_weight="1"
            android:id="@+id/bar1"
            android:visibility="gone">

        </ProgressBar>
        <TextView
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rakah2"
            android:id="@+id/rakah2"
            android:textSize="15dp">

        </TextView>
        <ProgressBar
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/bar2">

        </ProgressBar>
        <TextView
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rakah3"
            android:id="@+id/rakah3"
            android:textSize="15dp">

        </TextView>
        <ProgressBar
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/bar3">

        </ProgressBar>
        <TextView
            android:visibility="gone"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rakah4"
            android:id="@+id/rakah4"
            android:textSize="15dp">

        </TextView>
        <ProgressBar
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:id="@+id/bar4">

        </ProgressBar>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.5">
        <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:text="Current Posture">

        </TextView>

        -->
        <TextView
            android:id="@+id/comp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25dp"
           >

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <Button
            android:id="@+id/end_salah_btn"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="End Salah">

        </Button>
        <Button
            android:id="@+id/view_salah_btn"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="View Salah">

        </Button>

    </LinearLayout>





</LinearLayout>
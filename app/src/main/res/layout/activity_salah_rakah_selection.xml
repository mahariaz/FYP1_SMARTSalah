<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    android:background="@color/white"



    tools:context=".Salah_Rakah_Selection">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:titleTextColor="@color/black"
        app:title="Salah Picker"
        android:background="#009688"
        />


<TextView

    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:textSize="20dp"
    android:layout_weight="0.5"
    android:text="Track your Salah here">

</TextView>




    <LinearLayout
        android:padding="20dp"
        android:layout_margin="20dp"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:weightSum="2.1"
            android:layout_weight="1.5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Select Salah"
                android:textSize="20dp"
                android:layout_weight="0.3"
                >

            </TextView>
            <LinearLayout
                android:layout_weight="0.9"
                android:layout_width="match_parent"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/fajar_circle"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@color/white"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>


                    <TextView
                        android:id="@+id/fajar_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/fajar_circle"
                        android:layout_alignTop="@id/fajar_circle"
                        android:layout_alignRight="@id/fajar_circle"
                        android:layout_alignBottom="@id/fajar_circle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Fajar"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/zuhr_circle"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@color/white"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>


                    <TextView
                        android:id="@+id/zuhr_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/zuhr_circle"
                        android:layout_alignTop="@id/zuhr_circle"
                        android:layout_alignRight="@id/zuhr_circle"
                        android:layout_alignBottom="@id/zuhr_circle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Zuhr"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/asr_circle"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@color/white"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>


                    <TextView
                        android:id="@+id/asr_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/asr_circle"
                        android:layout_alignLeft="@id/asr_circle"
                        android:layout_alignRight="@id/asr_circle"
                        android:layout_alignTop="@id/asr_circle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Asr" />

                </RelativeLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.9"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/maghreb_circle"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:src="@color/white"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>


                    <TextView
                        android:id="@+id/maghreb_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/maghreb_circle"
                        android:layout_alignTop="@id/maghreb_circle"
                        android:layout_alignRight="@id/maghreb_circle"
                        android:layout_alignBottom="@id/maghreb_circle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Mghrb"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/isha_circle"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:src="@color/white"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>


                    <TextView
                        android:id="@+id/isha_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/isha_circle"
                        android:layout_alignLeft="@id/isha_circle"
                        android:layout_alignRight="@id/isha_circle"
                        android:layout_alignTop="@id/isha_circle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Isha" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/nafl_circle"
                        android:layout_width="80dp"
                        android:layout_height="70dp"
                        android:src="@color/white"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>


                    <TextView
                        android:id="@+id/nafl_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/nafl_circle"
                        android:layout_alignLeft="@id/nafl_circle"
                        android:layout_alignRight="@id/nafl_circle"
                        android:layout_alignTop="@id/nafl_circle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Nafl" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        <!-- rakahas-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="0.5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:text="Select Salah"
                android:textSize="20dp"
                android:layout_weight="0.5"
                >

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="4"
                android:layout_height="0dp"
                android:layout_weight="1.5">
                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/r1_circle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/white"

                        app:civ_border_color="#FF000000"
                        app:civ_border_width="2dp" />


                    <TextView
                        android:id="@+id/r1_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/r1_circle"
                        android:layout_alignTop="@id/r1_circle"
                        android:layout_alignRight="@id/r1_circle"
                        android:layout_alignBottom="@id/r1_circle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="1"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/r2_circle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/white"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>


                    <TextView
                        android:id="@+id/r2_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/r2_circle"
                        android:layout_alignLeft="@id/r2_circle"
                        android:layout_alignRight="@id/r2_circle"
                        android:layout_alignTop="@id/r2_circle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="2" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/r3_circle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/white"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>


                    <TextView
                        android:id="@+id/r3_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/r3_circle"
                        android:layout_alignLeft="@id/r3_circle"
                        android:layout_alignRight="@id/r3_circle"
                        android:layout_alignTop="@id/r3_circle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="3" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/r4_circle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@color/white"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>


                    <TextView
                        android:id="@+id/r4_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/r4_circle"
                        android:layout_alignLeft="@id/r4_circle"
                        android:layout_alignRight="@id/r4_circle"
                        android:layout_alignTop="@id/r4_circle"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="4" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
    <Button
        android:padding="20dp"
        android:id="@+id/start_salah_btn"
        android:layout_width="150dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Start Salah"
        android:layout_gravity="center"
        android:backgroundTint="@color/teal_200"
        android:background="@drawable/roundbtn">

    </Button>








</LinearLayout>